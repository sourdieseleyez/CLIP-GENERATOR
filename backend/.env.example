# ============================================
# REQUIRED - Core Configuration
# ============================================

# Secret key for JWT tokens (generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
SECRET_KEY=your-secret-key-here-change-in-production

# Environment mode (development or production)
# In development mode, dev login and seed data endpoints are available
ENVIRONMENT=development

# Disable authentication (ONLY for local development!)
# Set to 'false' in production (this is the default)
DISABLE_AUTH=true

# YouTube Integration (optional)
# To enable auto-upload to YouTube:
# 1. Get OAuth credentials from https://console.cloud.google.com/
# 2. Download client_secrets.json to project root
# 3. Run: python backend/youtube_setup.py
# 4. Restart backend
YOUTUBE_ENABLED=false

# OAuth Configuration (optional - for social login)
# Google OAuth: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# URLs for OAuth redirects
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:8000

# CORS - set to true to allow all origins (not recommended for production)
CORS_ALLOW_ALL=false

# Gemini API key from: https://aistudio.google.com/app/apikey
# Gemini 2.5 Flash Lite is the recommended video processing backend for this app.
# Set this to your Gemini API key to enable AI-powered video processing.
GEMINI_API_KEY=your-gemini-api-key-here

# When true, the backend will refuse to start (fail-fast) if GEMINI_API_KEY is not set.
# Set to 'false' for local development if you want to run without Gemini.
# Default: true
REQUIRE_GEMINI=false

# Speech-to-text engine: 'whisper' (default) or 'faster-whisper'
STT_ENGINE=whisper

# Dev user credentials (only used when DISABLE_AUTH=true or in-memory storage)
DEV_USER_EMAIL=dev@localhost
DEV_USER_PASSWORD=DevPass123!


# ============================================
# EMAIL CONFIGURATION (for notifications)
# ============================================

# SMTP settings (Gmail, SendGrid, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# From address
FROM_EMAIL=noreply@clipgen.ai
FROM_NAME=ClipGen

# App URL (for email links)
APP_URL=http://localhost:5173


# ============================================
# DATABASE - PostgreSQL (Neon, Railway, etc.)
# ============================================

# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
# 
# Neon (recommended - free tier): https://neon.tech
# Railway: https://railway.app
# Supabase: https://supabase.com
# 
# Leave empty to use in-memory storage (development only)
DATABASE_URL=postgresql://user:password@host:5432/dbname


# ============================================
# CLOUD STORAGE - S3-Compatible
# ============================================

# Storage bucket name
STORAGE_BUCKET=your-bucket-name

# Access credentials
STORAGE_ACCESS_KEY=your-access-key-here
STORAGE_SECRET_KEY=your-secret-key-here

# Custom endpoint (optional - for Cloudflare R2, DigitalOcean Spaces, etc.)
# AWS S3: leave empty
# Cloudflare R2: https://<account-id>.r2.cloudflarestorage.com
# DigitalOcean Spaces: https://<region>.digitaloceanspaces.com
STORAGE_ENDPOINT=

# Region (use 'auto' for Cloudflare R2, or AWS region like 'us-east-1')
STORAGE_REGION=auto


# ============================================
# QUEUEING (Optional - for production)
# ============================================

# Enable Redis queue for background processing
USE_QUEUE=false
REDIS_URL=redis://localhost:6379/0

# Job timeout in seconds (default 1 hour)
JOB_TIMEOUT=3600


